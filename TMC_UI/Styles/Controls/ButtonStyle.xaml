<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                        xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <sys:Double x:Key="ButtonOnHoverOpacity">0.8</sys:Double>
    <SolidColorBrush x:Key="ButtonOnClickBrush" Color="{DynamicResource PrimaryColor}" Opacity="0.8"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="{DynamicResource PrimaryColor}"/>

    <SolidColorBrush x:Key="ButtonOnHoverBackground" Color="{DynamicResource PrimaryColor}" Opacity="0.8"/>

    <SolidColorBrush x:Key="ButtonForeground" Color="{DynamicResource ForegroundColor}" Opacity="1"/>
    <SolidColorBrush x:Key="ButtonOnHoverForeground" Color="{DynamicResource ForegroundColor}" Opacity="0.9"/>
    <SolidColorBrush x:Key="ButtonStroke" Color="{DynamicResource ForegroundColor}" Opacity="0.6"/>
    <SolidColorBrush x:Key="ButtonOnHoverStroke" Color="{DynamicResource SecondaryColor}" Opacity="1"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="Gray" Opacity="0.5"/>

    <Thickness x:Key="ButtonStrokeThickness">0.8</Thickness>

</ResourceDictionary>