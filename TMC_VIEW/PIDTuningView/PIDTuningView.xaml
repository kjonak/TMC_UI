<UserControl x:Class="TMC_VIEW.PIDTuningView.PIDTuningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMC_VIEW.PIDTuningView" xmlns:pid="clr-namespace:TMC_VIEW.PIDTuningView.PID"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <pid:PidBox Background="{DynamicResource SurfaceBrush}" Margin="5"/>
        <local:PlotsView Grid.Column="1"  Background="{DynamicResource SurfaceBrush}" Margin="5"/>
    </Grid>
</UserControl>
